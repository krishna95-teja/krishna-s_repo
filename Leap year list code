def find_leap_years(given_year):

    i = 0
    list_of_leap_years = [given_year]
#while loop to create 15 leap years as multiples of 4
    while i < 15:
        if (given_year % 4 == 0) or (given_year % 100 == 0 and given_year % 400 == 0):  #Leap year condition
            given_year += 4                                                             
            i += 1                                                                      #incrementing i
        list_of_leap_years.append(given_year)
    

    return list_of_leap_years

list_of_leap_years=find_leap_years(2012)
print(list_of_leap_years)


